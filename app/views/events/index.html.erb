<h1>Wydarzenia</h1>

<%= link_to 'Dodaj nowe wydarzenie', new_event_path, class: 'btn btn-success mb-3' %>

<!-- Filmy -->
<h2>Filmy</h2>
<table class="table table-bordered">
  <thead>
  <tr>
    <th>Nazwa</th>
    <th>Data</th>
    <th>Film</th>
    <th>Uczestnicy</th>
    <th>Akcje</th>
  </tr>
  </thead>
  <tbody>
  <% @movies.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.date.strftime('%d-%m-%Y %H:%M') %></td>
      <td><%= event.movie ? event.movie.title : 'Brak filmu' %></td>
      <td>
        <% event.users.each do |user| %>
          <%= user.name %><br>
        <% end %>
      </td>
      <td>
        <%= link_to 'Pokaż', event_path(event), class: 'btn btn-info btn-sm' %> |
        <%= link_to 'Edytuj', edit_event_path(event), class: 'btn btn-primary btn-sm' %> |
        <%= button_to 'Usuń', event_path(event), method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć to wydarzenie?' }, class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<!-- Koncerty -->
<h2>Koncerty</h2>
<table class="table table-bordered">
  <thead>
  <tr>
    <th>Nazwa</th>
    <th>Data</th>
    <th>Wykonawcy</th>
    <th>Uczestnicy</th>
    <th>Akcje</th>
  </tr>
  </thead>
  <tbody>
  <% @concerts.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.date.strftime('%d-%m-%Y %H:%M') %></td>
      <td>
        <% event.performers.each do |performer| %>
          <%= performer.name %><br>
        <% end %>
      </td>
      <td>
        <% event.users.each do |user| %>
          <%= user.name %><br>
        <% end %>
      </td>
      <td>
        <%= link_to 'Pokaż', event_path(event), class: 'btn btn-info btn-sm' %> |
        <%= link_to 'Edytuj', edit_event_path(event), class: 'btn btn-primary btn-sm' %> |
        <%= button_to 'Usuń', event_path(event), method: :delete, data: { confirm: 'Czy na pewno chcesz usunąć to wydarzenie?' }, class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
